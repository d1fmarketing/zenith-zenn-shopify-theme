{% comment %}
  Hero Section - Shopify Liquid Snippet
  
  This snippet creates a premium, Apple-inspired hero section
  with enhanced typography, animations, and responsive design.
  
  Usage:
  {% render 'hero-section' %}
  
  Optional parameters:
  - title: Override the default hero title
  - subtitle: Override the default hero subtitle
  - button_text: Override the default button text
  - button_url: Override the default button URL
  - image: Override the default hero image
  - image_alt: Override the default image alt text
{% endcomment %}

{%- liquid
  assign hero_title = title | default: 'Experience Premium Wellness'
  assign hero_subtitle = subtitle | default: 'Scientifically crafted gummies designed for optimal wellness, with natural ingredients that deliver results you can see and feel.'
  assign hero_button_text = button_text | default: 'Shop Gummies'
  assign hero_button_url = button_url | default: '#products'
  assign hero_image = image | default: section.settings.image
  assign hero_image_alt = image_alt | default: 'Zenith Zenn Premium Wellness Gummies'
-%}

<section class="hero-section" id="home">
  <div class="container">
    <div class="hero-grid">
      <div class="hero-content">
        <h1 class="hero-title">{{ hero_title }}</h1>
        <p class="hero-subtitle">{{ hero_subtitle }}</p>
        <div class="hero-cta">
          <a href="{{ hero_button_url }}" class="btn btn-primary">{{ hero_button_text }}</a>
        </div>
      </div>
      <div class="hero-image-container">
        {% if hero_image %}
          <img src="{{ hero_image | img_url: '800x' }}" alt="{{ hero_image_alt }}" class="hero-image">
        {% else %}
          <img src="{{ 'hero-placeholder.jpg' | asset_url }}" alt="{{ hero_image_alt }}" class="hero-image">
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  {% if section.settings.desktop_height %}
    .hero-section {
      min-height: {{ section.settings.desktop_height }}px;
    }
  {% endif %}
  
  {% if section.settings.enable_parallax == false %}
    .hero-image {
      animation: none !important;
    }
  {% endif %}
  
  @media screen and (max-width: 767px) {
    {% if section.settings.mobile_height %}
      .hero-section {
        min-height: {{ section.settings.mobile_height }}px;
      }
    {% endif %}
  }
</style>