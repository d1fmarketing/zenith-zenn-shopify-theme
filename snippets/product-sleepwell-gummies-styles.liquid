  Include this snippet in the product.sleepwell-gummies.liquid template to load custom styles
{% endcomment %}

{% if product.handle == 'sleepwell-gummies' %}
  {{ 'product-sleepwell-gummies.css' | asset_url | stylesheet_tag }}
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Bundle options functionality
      const bundleOptions = document.querySelectorAll('.bundle-option');
      const bundleRadios = document.querySelectorAll('.bundle-option input[type="radio"]');
      
      bundleOptions.forEach(option => {
        option.addEventListener('click', function() {
          // Find the radio input within this option
          const radio = this.querySelector('input[type="radio"]');
          if (radio) {
            radio.checked = true;
            
            // Remove selected class from all options
            bundleOptions.forEach(opt => {
              opt.classList.remove('selected');
            });
            
            // Add selected class to clicked option
            this.classList.add('selected');
          }
        });
      });
      
      // Product image zoom on hover
      const productImage = document.querySelector('.product__media img');
      if (productImage) {
        productImage.addEventListener('mouseover', function() {
          this.style.transform = 'scale(1.05)';
          this.style.transition = 'transform 0.3s ease';
        });
        
        productImage.addEventListener('mouseout', function() {
          this.style.transform = 'scale(1)';
        });
      }
    });
  </script>
{% endif %}